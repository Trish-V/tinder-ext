{
   "manifest_version": 2,
   "name": "TinderBud Extension",
   "description": "Tinder Bot Extension developed for ",
   "version": "1.0",
   "browser_action": {
      "default_icon": "assets/icon/tinderbud.png",
      "default_popup": "index.html"
   },
   "permissions": [
      "declarativeContent",
      "storage",
      "activeTab",
      "tabs",
      "<all_urls>"
   ],
   "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self' ",

   "background": {
      "scripts": [
         "assets/chromejs/background.js",
         
         "assets/chromejs/cupido-api-service/services/messages.js" ,

         "assets/chromejs/cupido-api-service/main.js"
      ],
      "persistent": false
   }
}


